generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int @id @default(autoincrement())
  itle	      String
  price	      Int
  zipcode	    String
  seller	    String
  thumbnailHd	String
  date	      String

  @@map("products")
}

model Purchase {
  purchase_id	String @id @default(uuid())
  card_number	String 
  cliend_id	  String
  value	      Int
  date	      String

  @@map("pruchases")
}